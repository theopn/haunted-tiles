# {{{ VARIABLES
set $mod Mod4
# Script var
set $lock ~/.config/haunted-tiles/scripts/lock.sh
set $rofi_powermenu ~/.config/haunted-tiles/scripts/rofi-powermenu.sh
set $volume_ctrl ~/.config/haunted-tiles/scripts/volume-ctrl.sh
# Program var
set $bar ~/.config/haunted-tiles/scripts/polybar-launch.sh dracula
set $clipboard clipit
set $compositor picom
set $menu "rofi -modi drun,run -show drun"
set $network nm-applet --indicator
set $nightlight redshift -P -l 40.7:-73.9 -t 5600:3500 -m randr
set $notification dunst
set $screenshot flameshot launcher
set $term kitty
set $wallpaper feh --no-fehbg --bg-fill "/home/theopn/.config/haunted-tiles/assets/naomi-solarsys-draculafied.png"
# This is used to set the natural scrolling and tab to click
set $trackpad_id 'SynPS/2 Synaptics TouchPad'
# Key var
set $left h
set $down j
set $up k
set $right l
# workspace var
# 1, 2 - Development and web: Terminal with tmux and Neovim, Firefox
set $ws1 "1:  "
set $ws2 "2:  "
# 3, 4 - Communication: Email and other communication apps
set $ws3 "3: 󰵅 "
set $ws4 "4: 󰏶 "
# 5, 6 - Productivity: Emacs, calendar, daily agenda, and music
set $ws5 "5: 󰇴 "
set $ws6 "6:  "
# 7 - Park: Background processes and apps no longer used
set $ws7 "7: 󰪭 "
# Rest of the workspaces are often unused
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
# }}}

# {{{ BASE KEYBINDINGS
# Use pactl to adjust volume in PulseAudio.
#bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
#bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id $volume_ctrl up
bindsym XF86AudioLowerVolume exec --no-startup-id $volume_ctrl down
bindsym XF86AudioMute exec --no-startup-id $volume_ctrl mute
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Use brightnessctl to adjust brightness with function row keys
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id $menu
bindsym $mod+space exec --no-startup-id $menu

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# split in horizontal/vertical orientation
bindsym $mod+z split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# Press the mod key to move the floating window w/ mouse
floating_modifier $mod
# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle
# focus the parent/child container
#bindsym $mod+a focus parent
#bindsym $mod+d focus child
# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
