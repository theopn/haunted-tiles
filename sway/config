# Window classes {{{
for_window [app_id="^small_float$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 5, move center
for_window [app_id="^large_float$"] floating enable, sticky enable, resize set 70 ppt 70 ppt, border pixel 5, move center
set $small_float kitty --class=small_float -e
set $large_float kitty --class=large_float
# }}}

# Variables {{{
# Essentials
set $mod Mod4
set $term kitty
set $menu "rofi -modi drun,run -show drun"

# Scripts for keybindings
set $clipboard_clear clipman clear --all
set $clipboard_show $small_float clipman pick --print0 --tool=CUSTOM --tool-args="fzf --prompt 'pick > ' --bind 'tab:up' --cycle --read0"
set $lock ~/.config/haunted-tiles/scripts/swaylock.sh
set $powermenu ~/.config/haunted-tiles/scripts/rofi-powermenu.sh
set $screenshot grim -g "$(slurp)"
set $supercatmenu $small_float ~/.config/haunted-tiles/scripts/super-cat-menu.sh
set $volume_ctrl ~/.config/haunted-tiles/scripts/volume-ctrl.sh

# Startup app
set $bar waybar
set $clipboard wl-paste -t text --watch clipman store
set $network nm-applet --indicator
set $nightlight gammastep -P -l 40.7:-73.9 -t 5600:3500
set $notification dunst
#set $wallpaper ~/.config/haunted-tiles/assets/naomi-solarsys-draculafied.png
set $wallpaper ~/Documents/wallpaper/first-collection/fedora.png

# Key var
set $left h
set $down j
set $up k
set $right l

# workspace var
# 1, 2 - Development and web: Terminal with tmux and Neovim, Firefox
set $ws1 "1:  "
set $ws2 "2:  "
# 3, 4 - Communication: Email and other communication apps
set $ws3 "3: 󰵅 "
set $ws4 "4: 󰏶 "
# 5, 6 - Productivity: Emacs, calendar, daily agenda, and music
set $ws5 "5: 󰇴 "
set $ws6 "6:  "
# 7 - Park: Background processes and apps no longer used
set $ws7 "7: 󰪭 "
# Rest of the workspaces are often unused
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
# }}}

# Settings {{{
# Wallpaper
output * bg $wallpaper fill
# Display scaling
#output eDP-1 scale 1.1
# Keyboard and trackpad settings
input "type:keyboard" {
  xkb_options ctrl:swapcaps
}
input "type:touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}
# Idle actions
exec swayidle -w \
  timeout 300 '$lock' \
  timeout 600 'swaymsg "output * dpms off"' \
  resume 'swaymsg "output * dpms on"' \
  before-sleep '$lock'
# }}}

# Keybindings {{{
# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec $volume_ctrl up
bindsym XF86AudioLowerVolume exec $volume_ctrl down
bindsym XF86AudioMute exec $volume_ctrl mute
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Use brightnessctl to adjust brightness with function row keys
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec $menu
bindsym $mod+space exec $menu

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# split in horizontal/vertical orientation
bindsym $mod+z split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# Press the mod key to move the floating window w/ mouse
floating_modifier $mod normal
# change focus between tiling / floating windows
# bindsym $mod+space focus mode_toggle
# focus the parent/child container
# bindsym $mod+a focus parent
# bindsym $mod+d focus child
# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# }}}

# Modes {{{
# Window resize mode
set $resize_mode RESIZE MODE: (hjkl, arrows) Resize (esc, return, super+r) Exit
mode "$resize_mode" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+r mode "default"
}
bindsym $mod+r mode "$resize_mode"
# Sway related options mode
set $sway_mode Sway MODE: (c) Config reload (e) Exit Sway (esc, Return, Mode+Shift+c/e) Exit
mode "$sway_mode" {
  bindsym c reload, mode "default"
  bindsym e exec "swaynag -t warning -m 'Exit Sway?' -B 'Sure' 'swaymsg exit'"
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+Shift+c mode "default"
  bindsym $mod+Shift+e mode "default"
}
bindsym $mod+Shift+c mode "$sway_mode"
bindsym $mod+Shift+e mode "$sway_mode"
# }}}

# Utility keybindings {{{
# Clipboard
bindsym $mod+Shift+r exec $clipboard_clear
bindsym $mod+Shift+v exec $clipboard_show
# Screenshot
bindsym $mod+Shift+s exec $screenshot
# Powermenu
bindsym $mod+Shift+p exec $powermenu
# My custom menu
bindsym $mod+Shift+Return exec $supercatmenu
# }}}

# Appearance {{{
# Font and colors
font pango:CaskaydiaCove Nerd Font 8
# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36
client.background       #F8F8F2
# No window title
default_border pixel
default_floating_border pixel
# Gap
gaps inner 3
gaps outer 3
# Remove border when there is only one window
smart_borders on
# }}}

# Startup App {{{
exec $bar
exec $clipboard
exec $network
exec $nightlight
exec $notification
# }}}

