# Window classes {{{
for_window [shell=".*"] inhibit_idle fullscreen
for_window [app_id="pavucontrol"] floating enable, move position center, sticky enable
for_window [app_id="copyq"] floating enable, resize set 600 400, move position center, border pixel 5, sticky enable
for_window [app_id="firefox" title="^Picture-in-Picture$"] floating enable, move position 0 0, sticky enable
for_window [shell="xwayland"] {
  title_format "[XWayland] %title"
}
# }}}

# Variables {{{
# Essentials
set $mod Mod4
set $term kitty
set $menu "rofi -modi drun,run -show drun"
set $window "rofi -modi window -show window"

# Scripts and programs used for keybindings
set $brightness_ctrl brightness-ctrl.sh
set $clipboard_show copyq show
set $lock swaylock -f
set $monitor HDMI-2
set $powermenu rofi-powermenu.sh
set $screenshot rofi-screenshot.sh
set $screenrecord rofi-screenrecord.sh
set $volume_ctrl volume-ctrl.sh

# Startup app
set $bar waybar
set $clipboard copyq --start-server
set $input fcitx5 -d --replace
set $network nm-applet --indicator
#set $nightlight gammastep -P
set $nightlight gammastep-indicator
set $notification dunst
set $wallpaper ~/.config/wallpaper.png

# Key var
set $left h
set $down j
set $up k
set $right l

# workspace var
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
# }}}

# Keybindings {{{
# Use pactl to adjust volume in PulseAudio.
#bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
bindsym --locked XF86AudioRaiseVolume exec $volume_ctrl up
#bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym --locked XF86AudioLowerVolume exec $volume_ctrl down
#bindsym --locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym --locked XF86AudioMute exec $volume_ctrl mute
bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
# Use brightnessctl to adjust brightness with function row keys
#bindsym --locked XF86MonBrightnessUp exec brightnessctl set +5%
bindsym --locked XF86MonBrightnessUp exec $brightness_ctrl up
#bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessDown exec $brightness_ctrl down
# Use playerctl to control media playback
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioPrev exec playerctl previous
bindsym --locked XF86AudioNext exec playerctl next

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
#bindsym $mod+d exec $menu
bindsym $mod+space exec $menu
bindsym $mod+d exec $window

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# split in horizontal/vertical orientation
bindsym $mod+z split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# Press the mod key to move the floating window w/ mouse
floating_modifier $mod normal
# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle
bindsym $mod+b focus mode_toggle
# focus the parent/child container
bindsym $mod+a focus parent
#bindsym $mod+d focus child
# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
# Multiple monitor
bindsym $mod+Shift+bracketleft move workspace to output left
bindsym $mod+Shift+bracketright move workspace to output right
# }}}

# Modes {{{
# Window resize mode
set $resize_mode [RESIZE] (hjkl, arrows) Resize (ESC/RET/$mod+r) Exit
mode "$resize_mode" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+r mode "default"
}
bindsym $mod+r mode "$resize_mode"
# Sway related options mode
set $sway_mode [Sway Mode] (c) Config reload (e) Exit Sway (ESC/RET) Exit
mode "$sway_mode" {
  bindsym c reload, mode "default"
  bindsym e exit
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+Shift+c mode "$sway_mode"
bindsym $mod+Shift+e mode "$sway_mode"
bindsym XF86AudioMedia mode "$sway_mode"
# }}}

# Utility Keybindings {{{
bindsym $mod+Shift+v exec $clipboard_show

# Rofi scripts
bindsym Print exec $screenshot
bindsym $mod+Shift+r exec $screenrecord
bindsym $mod+Shift+p exec $powermenu

# Custom monitor mode
set $monitor_mode [Monitor ($monitor)] (l) left to eDP-1 (t) toggle (ESC/RET) Exit
mode "$monitor_mode" {
  bindsym t output $monitor toggle; mode "default"
  bindsym l output $monitor pos 0 0; mode "default"
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+Shift+m mode "$monitor_mode"
# }}}

# Appearance {{{
# Font and colors
font pango:ProggyClean Nerd Font 8
# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36
client.background       #F8F8F2
# No window title
default_border pixel
default_floating_border pixel
# Gap
gaps inner 3
gaps outer 3
# Remove border when there is only one window
smart_borders on
####### SWAYFX ONLY SETTINGS #######
include ~/.config/sway/swayfx.conf
# }}}

# Settings {{{
# Swap Caps Lock and Control. No more Emacs pinky
input "type:keyboard" {
  xkb_options ctrl:swapcaps
}
# Enable tap to click, disable while typing, and natural scrolling
input "type:touchpad" {
  dwt enabled
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}
focus_follows_mouse no
# Idle actions
exec swayidle -w \
       timeout 180 'brightnessctl -s set 10%' resume 'brightnessctl -r' \
       timeout 300 '$lock' \
       timeout 420 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
       timeout 540 'systemctl suspend' \
       before-sleep '$lock'
# Display scaling
output eDP-1 scale 1.67
# Wallpaper
output * bg $wallpaper fill
# }}}

# Startup App {{{
exec $bar
exec $clipboard
exec $input
exec $network
exec $nightlight
exec $notification
# }}}

